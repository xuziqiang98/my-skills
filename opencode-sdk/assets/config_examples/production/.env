# Production Configuration Example

# Server Configuration
OPENCODE_BASE_URL=https://your-opencode-server.com
OPENCODE_HOSTNAME=your-production-host
OPENCODE_PORT=443

# Default Model (reliable for production)
DEFAULT_PROVIDER=anthropic
DEFAULT_MODEL=claude-3-5-sonnet-20241022

# API Keys (use secure key management in production)
ANTHROPIC_API_KEY=your_prod_anthropic_key
OPENAI_API_KEY=your_prod_openai_key

# Logging (minimal for production)
LOG_LEVEL=warn
LOG_FILE_PATH=/var/log/opencode/app.log

# Application Settings
APP_NAME=OpenCode Production Integration
APP_VERSION=1.0.0
NODE_ENV=production
DEBUG=false

# Session Settings (longer timeout for production)
SESSION_TIMEOUT=600000

# Retry Configuration (conservative retrying for production)
MAX_RETRIES=3
RETRY_DELAY_BASE=2000

# Additional Production Settings
# Use secure authentication
ENABLE_RATE_LIMITING=true
MAX_REQUESTS_PER_MINUTE=100

# Monitoring
ENABLE_METRICS=true
METRICS_ENDPOINT=https://your-metrics-service.com

# Security
VALIDATE_SSL_CERTIFICATES=true
ENABLE_REQUEST_SIGNING=true