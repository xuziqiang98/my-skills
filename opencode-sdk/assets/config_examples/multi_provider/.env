# Multi-Provider Configuration Example

# Server Configuration
OPENCODE_BASE_URL=http://localhost:4096
OPENCODE_HOSTNAME=127.0.0.1
OPENCODE_PORT=4096

# Primary Provider
DEFAULT_PROVIDER=anthropic
DEFAULT_MODEL=claude-3-5-sonnet-20241022

# Anthropic Configuration
ANTHROPIC_API_KEY=your_anthropic_key
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022
ANTHROPIC_MAX_TOKENS=100000
ANTHROPIC_TEMPERATURE=0.7

# OpenAI Configuration  
OPENAI_API_KEY=your_openai_key
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=128000
OPENAI_TEMPERATURE=0.7

# Google AI Configuration
GOOGLE_API_KEY=your_google_key
GOOGLE_MODEL=gemini-1.5-pro
GOOGLE_MAX_TOKENS=2000000
GOOGLE_TEMPERATURE=0.7

# Provider Selection Strategy
PROVIDER_STRATEGY=fallback
PROVIDER_FALLBACK_ORDER=anthropic,openai,google

# Provider-Specific Settings
# Anthropic - for complex reasoning
ANTHROPIC_USE_CASES=reasoning,analysis,coding

# OpenAI - for general tasks
OPENAI_USE_CASES=general,summarization,translation

# Google - for large context
GOOGLE_USE_CASES=large_context,multimodal,long_documents

# Load Balancing
ENABLE_LOAD_BALANCING=true
PROVIDER_WEIGHTS=anthropic:0.5,openai:0.3,google:0.2

# Cost Management
MONTHLY_BUDGET_LIMIT=1000
COST_TRACKING=true
CHEAPEST_PROVIDER_FIRST=false

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs/multi-provider.log

# Application Settings
APP_NAME=OpenCode Multi-Provider Integration
NODE_ENV=production
SESSION_TIMEOUT=300000

# Retry Configuration
MAX_RETRIES=3
RETRY_DELAY_BASE=1000

# Provider Health Checks
ENABLE_HEALTH_CHECKS=true
HEALTH_CHECK_INTERVAL=300000

# Failover Settings
AUTO_FAILOVER=true
FAILOVER_TIMEOUT=5000