# Testing Configuration Example

# Server Configuration (use mock server or test instance)
OPENCODE_BASE_URL=http://localhost:4097
OPENCODE_HOSTNAME=127.0.0.1
OPENCODE_PORT=4097

# Default Model (fast, cheap for testing)
DEFAULT_PROVIDER=anthropic
DEFAULT_MODEL=claude-3-haiku-20240307

# API Keys (use test keys or mocks)
ANTHROPIC_API_KEY=test_anthropic_key
OPENAI_API_KEY=test_openai_key

# Logging (verbose for testing)
LOG_LEVEL=debug
LOG_FILE_PATH=./logs/test.log

# Application Settings
APP_NAME=OpenCode Test Integration
APP_VERSION=1.0.0-test
NODE_ENV=test
DEBUG=true

# Session Settings (short timeout for testing)
SESSION_TIMEOUT=30000

# Retry Configuration (minimal retrying for tests)
MAX_RETRIES=1
RETRY_DELAY_BASE=100

# Testing Specific Settings
# Use mock responses when available
USE_MOCK_RESPONSES=true
MOCK_DATA_PATH=./tests/fixtures

# Test Database (if needed)
TEST_DB_URL=sqlite::memory:

# Disable external dependencies
DISABLE_EXTERNAL_CALLS=true
ENABLE_TEST_DOUBLES=true

# Coverage reporting
ENABLE_COVERAGE=true
COVERAGE_REPORT_PATH=./coverage

# Test Parallelization
TEST_PARALLEL_WORKERS=4