# Development Configuration Example

# Server Configuration
OPENCODE_BASE_URL=http://localhost:4096
OPENCODE_HOSTNAME=127.0.0.1
OPENCODE_PORT=4096

# Default Model (fast, cost-effective for development)
DEFAULT_PROVIDER=anthropic
DEFAULT_MODEL=claude-3-haiku-20240307

# API Keys (use test keys or local models when possible)
ANTHROPIC_API_KEY=your_dev_anthropic_key
OPENAI_API_KEY=your_dev_openai_key

# Logging (verbose for development)
LOG_LEVEL=debug
LOG_FILE_PATH=./logs/dev.log

# Application Settings
APP_NAME=OpenCode Dev Integration
APP_VERSION=1.0.0-dev
NODE_ENV=development
DEBUG=true

# Session Settings
SESSION_TIMEOUT=600000

# Retry Configuration (more aggressive retrying for development)
MAX_RETRIES=5
RETRY_DELAY_BASE=500